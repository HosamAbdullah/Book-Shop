
@{
    ViewData["Title"] = "Orders";
}
@using Ecomerce.Models
@model List<Order>
<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Order List
            </h2>
        </div>
    </div>
</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Order Id</th>
            <th>Order Date</th>
            <th>Shipping Date</th>
            <th>Total</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            if (item != null)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.OrderDate</td>
                    <td>@item.ShippingDate</td>
                    <td>@item.OrderTotal</td>
                    <td>@item.OrderStatus</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-action="Details" class="btn btn-primary mx-2" asp-route-id="@item.Id">
                                <i class="bi bi-pencil-square"></i>Details
                            </a>
                            <a asp-action="Delete" class="btn btn-danger mx-2" asp-route-id="@item.Id">
                                <i class="bi bi-trash-fill"></i>Delete
                            </a>
                        </div>
                    </td>

                </tr>
            }
        }
    </tbody>

</table>


