@using Microsoft.AspNetCore.Identity

@inject SignInManager<user> SignInManager
@inject UserManager<user> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
        <li class="nav-item">
            <a class="nav-link" asp-controller="Cart" asp-action="Index" style="font-size:27px">
                <i class="bi bi-cart"></i>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="register"  asp-controller="Account" asp-action="SignOut">Log Out</a>
        </li>
}
else
{
     <li class="nav-item">
            <a class="nav-link" asp-controller="Cart" asp-action="Index" style="font-size:27px">
                <i class="bi bi-cart"></i>
            </a>
     </li>
    <li class="nav-item">
        <a class="nav-link" id="register" asp-controller="Account" asp-action="Register">Register</a>
    </li>
    <li class="nav-item">
            <a class="nav-link" id="login"  asp-controller="Account" asp-action="LogIn">Login</a>
    </li>
}
</ul>
