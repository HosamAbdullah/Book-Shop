@using Ecomerce.Models
@model List<Product>
<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Product List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i>Create New Product</a>
        </div>

    </div>
</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>ISBN</th>
            <th>Price</th>
            <th>Category</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        { if (item != null)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Author</td>
                    <td>@item.ISBN</td>
                    <td>@item.Price</td>
                    <td>@item.category.Name</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-action="Edit" class="btn btn-primary mx-2" asp-route-id="@item.Id">
                              <i class="bi bi-pencil-square"></i>Edit
                        </a>
                        <a asp-action="Delete" class="btn btn-danger mx-2" asp-route-id="@item.Id">
                            <i class="bi bi-trash-fill"></i>Delete
                        </a>
                    </div>
                </td>
              
            </tr>
            }
        }
    </tbody>

</table>
